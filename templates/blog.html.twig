{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/blog_responsive.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/blog_styles.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Comfortaa&display=swap" rel="stylesheet">
{% endblock %}
{% block body %}
    <!-- Home -->

    <div class="home">
        <div class="home_background parallax-window" data-parallax="scroll" data-image-src="images/shop_background.jpg"></div>
        <div class="home_overlay"></div>
        <div class="home_content d-flex flex-column align-items-center justify-content-center">
            <h2 class="home_title">Блог</h2>
        </div>
    </div>

    <!-- Blog -->

    <div class="blog">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="blog_posts d-flex flex-row align-items-start justify-content-between">
                        {% for post in posts %}
                        <!-- Blog post -->
                        <div class="blog_post">
                            <div class="blog_image" style="background-image:url('{{asset('/images/blog/' ~ post.image)}}')"></div>
                            <div class="blog_text px-4 pt-2">{{ post.title }}...</div>
                            <div class="pt-1 px-4">{{ post.description | slice(0,100) }}...</div>
                            <div class="blog_button"><a href={{ path('showBlogPost', {'slug': post.slug}) }}>Читать дальше</a></div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}