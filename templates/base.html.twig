<!DOCTYPE html>
<html>
<head>
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="http:/icon-logo.png">

    {% block stylesheets %}
    <title>Частное предприятие «МАВОК»</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="OneTech shop project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/styles/bootstrap4/bootstrap.min.css">
    <link href="/plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="/plugins/slick-1.8.0/slick.css">
    <link rel="stylesheet" type="text/css" href="/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="/styles/responsive.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
    <link href="https://fonts.googleapis.com/css?family=Orbitron&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cantarell&display=swap" rel="stylesheet">
    {% endblock %}

</head>
<!-- Header -->
<header class="header" id="header">
    <!-- Top Bar -->
    <div class="top_bar">
        <div class="container">
            <div class="row">
                <div class="col d-flex flex-row">
                    {{ render(controller('App\\Controller\\DefaultController::headerContacts')) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Header Main -->
    <div class="header_main">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-lg-2 col-sm-3 col-3 order-1" id="logo_container">
                    <div class="logo_container">
                        <div class="logo" id="logo"><a href="{{ path('index') }}">Mavok</a></div>
                    </div>
                </div>
                <!-- Search -->
                <div class="col-lg-6 col-12 order-lg-2 order-3 text-lg-left text-right">
                    <div class="header_search">
                        <div class="header_search_content">
                            <div class="header_search_form_container">
                                <form action="{{ path('product_search') }}" class="header_search_form clearfix" method="get">
                                    <input autocomplete="off" id="desktop-search" name="search_text" type="search" required="required" class="header_search_input" placeholder="Найти товар...">
                                    <button type="submit" class="header_search_button trans_300" value="Submit"><i class="fas fa-2x text-white fa-search"></i></button>
                                </form>
                            </div>
                        </div>
                        <div id="desktop-result" class="list-group header_search_results text-left">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-9 order-lg-3 order-2 text-right">
                    <div class="logo_container">
                        <div class="logo" id="basket">
                            <a href="{{ path('basket_view') }}">
                                <i class="fas fa-shopping-cart text-primary"></i>
                            </a>
                        </div>
                        <a  id="resp_logo" style="display:none;	font-size: 50px;font-family: 'Orbitron', sans-serif;" href="{{ path('index') }}">Mavok</a>
                        <a class="d-none" id="resp_basket" href="{{ path('basket_view') }}">
                            <i class="fas fa-shopping-cart text-primary fa-2x"></i>
                        </a>
                        <span class="basket_count badge badge-pill badge-danger notify" id="basket-product-amount"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Navigation -->
    <nav class="main_nav">
        <div class="container p-0" id="container">
            <div class="row">
                <div class="col p-0">
                    <div class="main_nav_content d-flex flex-row">
                        <!-- Categories Menu -->
                        <div class="cat_menu_container mobile-header-closed">
                            <div class="cat_menu_title d-flex flex-row align-items-center justify-content-start">
                                <div class="cat_burger"><span></span><span></span><span></span></div>
                                <div class="cat_menu_text">категории</div>
                            </div>
                            <ul class="cat_menu" id="header_dropdown"></ul>
                        </div>
                        <!-- Main Nav Menu -->
                        <div class="main_nav_menu ml-auto">
                            <ul class="standard_dropdown main_nav_dropdown">
                                <li><a href="{{ path('sale_products') }}">Акции<i class="fas fa-chevron-down"></i></a></li>
                                <li><a href="{{ path('showBlog') }}">Блог<i class="fas fa-chevron-down"></i></a></li>
                                <li><a href="{{ path('showReviews')}}">Отзывы<i class="fas fa-chevron-down"></i></a></li>
                                <li><a href="{{ path('about_us') }}">О нас<i class="fas fa-chevron-down"></i></a></li>
                            </ul>
                        </div>
                        <!-- Menu Trigger -->
                        <div class="menu_trigger_container ml-auto">
                            <div class="menu_trigger d-flex flex-row align-items-center justify-content-end">
                                <div class="menu_burger">
                                    <div id="menu_trigger" class="menu_trigger_closed">
                                        <div class="menu_trigger_text">Меню</div>
                                        <div class="cat_burger menu_burger_inner text-light"><i class="fas fa-bars"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            {% block filter %}
            
            {% endblock %}
        </div>
    </nav>
    <!-- Menu -->
    <div class="page_menu">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="page_menu_content">
                        <div class="page_menu_search">
                            <form action="{{ path('product_search') }}">
                                <input autocomplete="off" name="search_text" id="mobile-search" type="search" required="required" class="page_menu_search_input" placeholder="Найти товар...">
                            </form>
                            <div id="mobile-search-result" class="list-group mobile_search_results text-left">

                            </div>
                        </div>
                        <ul class="page_menu_nav">
                            <li class="page_menu_item">
                                <a href="{{ path('index') }}">На главную<i class="fa fa-angle-down"></i></a>
                            </li>
                            <li class="page_menu_item">
                                <a href="{{ path('sale_products') }}">Акции<i class="fa fa-angle-down"></i></a>
                            </li>
                            <li class="page_menu_item">
                                <a href="{{ path('showBlog') }}">Блог<i class="fa fa-angle-down"></i></a>
                            </li>
                            <li class="page_menu_item">
                                <a href="{{ path('showReviews') }}">Отзывы<i class="fa fa-angle-down"></i></a>
                            </li>
                            <li class="page_menu_item">
                                <a href="{{ path('about_us') }}">О нас<i class="fa fa-angle-down"></i></a>
                            </li>
                        </ul>
                        <div id="menu_contact">
                            {{ render(controller('App\\Controller\\DefaultController::responsiveContacts')) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</header>
<body>
{% block body %}

{% endblock %}
</body>
<!-- Recently Viewed -->
<div id="recently_viewed">
    {{ render(controller('App\\Controller\\ProductController::getRecentlyViewed')) }}
</div>
<!-- Copyright -->
<footer id="footer">
    {{ render(controller('App\\Controller\\DefaultController::footer')) }}
</footer>
{% block javascripts %}
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/styles/bootstrap4/popper.js"></script>
    <script src="/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="/plugins/greensock/TweenMax.min.js"></script>
    <script src="/plugins/greensock/TimelineMax.min.js"></script>
    <script src="/plugins/scrollmagic/ScrollMagic.min.js"></script>
    <script src="/plugins/greensock/animation.gsap.min.js"></script>
    <script src="/plugins/greensock/ScrollToPlugin.min.js"></script>
    <script src="/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="/plugins/slick-1.8.0/slick.js"></script>
    <script src="/plugins/easing/easing.js"></script>
    <script src="/js/custom.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="/js/main.js"></script>
    <script src="{{ asset('plugins/parallax-js-master/parallax.min.js') }}"></script>
{% endblock %}
<script>
    $('label').each(function() {
        if($(this).hasClass('required'))
            $(this).append($('<span style="color: red; font-size: 10px;"> * Обязательно</span>'));
    });
</script>
</html>